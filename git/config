[core]
    editor = nvim

[init]
    defaultBranch = main

[alias]
    a = add
    c = commit
    s = status
    b = branch
    bc = branch --show-current
    p = pull
    co = checkout
    us = restore --staged
    wtl = worktree list
    wta = worktree add
    wtr = worktree remove

[include]
    path = ~/.config/git/config.profile
