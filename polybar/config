[colors]
;background = ${xrdb:color0:#222}
background = #00000000
background-alt = #00000000
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=11.5;1
font-1 = FontAwesome:size=9;0
font-2 = FontAwesome5Brands:size=9;0

modules-left = date
modules-center = i3
modules-right = volume wlan battery

tray-position = right
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true

; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.background}
label-focused-underline = #fff
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-underline = ${colors.alert}
label-urgent-padding = 2

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-default = 

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
format-connected-underline = #fff
label-connected =  %essid%

format-disconnected = <label-disconnected>
format-disconnected-underline = ${colors.foreground-alt}
label-disconnected =  disconnected
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1

date = " %m-%d"
time = %H:%M

format-prefix = 
format-prefix-foreground = ${colors.foreground}
format-underline = #fff

label = %date% %time%

[module/volume]
type = internal/volume

format-volume-underline = #fff
format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-foreground = ${colors.foreground}

format-muted-underline = ${colors.foreground-alt}
format-muted = <label-muted>
format-muted-foreground = ${colors.foreground-alt}
label-muted =  muted


[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 99
poll-interval = 1

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.primary}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = #fff

format-full-prefix = ""
format-full-prefix-foreground = ${colors.foreground}
format-full-underline = #fff

ramp-capacity-4 = 
ramp-capacity-3 = 
ramp-capacity-2 = 
ramp-capacity-1 = 
ramp-capacity-0 = 
ramp-capacity-foreground = ${colors.foreground}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 750

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 5
margin-bottom = 5

