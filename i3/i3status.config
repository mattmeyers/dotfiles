general {
    output_format = "i3bar"
    colors = true
    interval =  5
}

order += "wireless wlp2s0"
order += "battery 0"
order += "tztime local"

wireless wlp2s0 {
    format_up = "%essid"
    format_down = "No Internet"
}

battery 0 {
    format = "%percentage %remaining"
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 10
}

tztime local {
    format = "%Y-%m-%d %H:%M"
}
